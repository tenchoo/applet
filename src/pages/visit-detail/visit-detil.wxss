.header{
  position:relative;
  height:166rpx;
  background:#536bc8;
  color:#fff;
  background:url(http://xsj.jooyum.com.cn/resource/img_banner_details_page.png) no-repeat;
  background-size:cover;
  text-align: center;
}
.header-date{
  flex:1;
  display:flex;
  justify-content: center;
  align-items: center;
  height:100%;
}
.header-edit{
  position:absolute;
  right:0;
  top:50%;
  transform:translate(0, -50%);
  margin:0 34rpx;
  font-size:22rpx;
}
.header-edit_icon{
  width:34rpx;
  height:34rpx;
}
.visit-body{
  padding:30rpx 30rpx 0 30rpx;
}
.visit-body_item{
  margin-bottom:20rpx;
  border:1px solid #ddd;
  border-radius:4px;
  background:#fff;
}
.visit-body_list{
  display:flex;
}
.visit-body_list_head,
.visit-body_list_body{
  display:flex;
  padding:24rpx 0;
}
.visit-body_list_head{
  justify-content: center;
  width:182rpx;
}
.visit-body_list_body{
  flex:1;
  margin-right:30rpx;
  color:#333;
  border-bottom:1px solid #ddd;
  line-height:1.5em;
}
.visit-body_list:last-of-type .visit-body_list_body{
  border-bottom:0 none;
}
.visit-body_tit{
  padding-left:32rpx;
  height:92rpx;
  line-height:92rpx;
}
.img-cont{
  padding:25rpx 32rpx;
}
.img-cont_item{
  display:inline-block;
  padding:8rpx;
  width:25%;
  height:140rpx;
}
.img-cont_item_image{
  width:100%;
  height:100%;
}
.arrow-right{
  margin-left:22rpx;
}