/* pages/virstdetails/virstdetails.wxss */
.base-virst-details{
    width: 100%;
    height: 100%;
    position: relative;
}
.top-background{
    position: relative;
    width: 100%;
    height: 350rpx;
    background-size: 100%;
    background: url("../../img/img_banner_details_page.png");
}
.virst-data{
    position: relative;
    width: 100%;
    padding-top: 50rpx;
    z-index: 500;
    font-size: 20px;
    color: white;
    text-align: center;
}
.virst-data-year{
    position: relative;
    margin-bottom: 52rpx;
    width: 100%;
    padding-top: 10rpx;
    z-index: 500;
    font-size: 15px;
    color: white;
    text-align: center;
}

.every-details{
    border-radius: 4px;
    border:1px solid #ddd;
    padding-left: 15rpx;
    padding-right: 15rpx;
    width: 100%;
    background: white;
    margin-top:20rpx;
}
.virst{
    width: 80%;
   color: black;
    display: inline-block;
}
.padding{
    width: 20%;
    display: inline-block;
    padding: 20rpx 20rpx 20rpx 20rpx;
}
.pad{
    position: absolute;
    top:0;
    left:auto;
    z-index:100000;
    padding-right: 15rpx;
    padding-left: 15rpx;
    width: 100%;
}
.photo-all{
    width: 100%;
}
.photo-sing{
    display: inline-block;
    padding-left: 5rpx;
    padding-right: 5rpx;
    width: 25%;
    height: 150rpx;
}
.picture{
    width: 100%;
    height: 100%;
}